{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
    <h1>Car index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Car_id</th>
                <th>Registration_number</th>
                <th>Model</th>
                <th>Img_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.carId }}</td>
                <td>{{ car.registrationNumber }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.imgUrl }}</td>
                <td>
                    <a href="{{ path('app_car_show', {'id': car.carId}) }}">show</a>
                    <a href="{{ path('app_car_edit', {'id': car.carId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_car_new') }}">Create new</a>
{% endblock %}
