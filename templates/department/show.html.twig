{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department</h1>
    {{ dump(department) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.deptNo }}</td>
            </tr>
            <tr>
                <th>Dept_name</th>
                <td>{{ department.deptName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ department.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ department.address }}</td>
            </tr>
            <tr>
                <th>Roi_url</th>
                <td>{{ department.roiUrl }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Dept_name</th>
            <th>Address</th>
        </tr>
        </thead>
        <tbody>
        {% for employee in department.managers %}
        <tr>
            <td>{{ employee.fullName }}</td>
            <td>{{ employee.birthDate|date('Y-m-d') }}</td>
            <td>{{ employee.hireDate|date('Y-m-d') }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_department_index') }}">back to list</a>

{% endblock %}
